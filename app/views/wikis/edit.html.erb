<h1>Edit Wiki</h1>
 
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% if @wiki.private? %>
        <div clas="form-group">
          <%= f.collection_select :collaborator_ids, User.all, :id, :email, {}, { multiple: true } %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>